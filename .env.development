# Server Configuration
PORT=8000
SERVER_URL=http://localhost:8000
NODE_ENV=development

# Database Configuration
# For Docker: Use service name (e.g., mysql)
# For local XAMPP/MySQL: Use localhost
MYSQL_HOST=localhost
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DATABASE=backend_nodejs_dev
# Full URL for Prisma (dotenv does not expand variables)
# Docker: mysql://app_user:app_password@mysql:3306/backend_nodejs_dev
# Local: mysql://root:@localhost:3306/backend_nodejs_dev
DATABASE_URL=mysql://root:@localhost:3306/backend_nodejs_dev

# Redis Configuration
# For Docker: Use service name (e.g., redis)
# For local Redis: Use localhost
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Frontend URLs for Development
FRONTEND_URL=http://localhost:3000,http://127.0.0.1:3000,http://localhost:3001
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# JWT Configuration
JWT_ACCESS_TOKEN_SECRET=your-super-secret-access-token-key-change-in-production
JWT_REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d
