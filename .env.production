
# Server Configuration
PORT=8000
SERVER_URL=https://yourapi.domain.com
NODE_ENV=production

# Database Configuration
MYSQL_HOST=production-db-host
MYSQL_USER=production_user
MYSQL_PASSWORD=
MYSQL_DATABASE=

# Redis Configuration
REDIS_HOST=redis-host
REDIS_PORT=6379
REDIS_PASSWORD=redis_production_password

# Frontend URLs for Production
FRONTEND_URL=https://yourdomain.com,https://www.yourdomain.com,https://app.yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# JWT Configuration
JWT_ACCESS_TOKEN_SECRET=your-super-secret-access-token-key-change-in-production
JWT_REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d