# ===========================================
# Copy to .env.development, .env.production, or .env.test
# and set values for that environment.
# ===========================================

# Server Configuration
PORT=8000
SERVER_URL=http://localhost:8000
NODE_ENV=development

# Database Configuration
# Prisma uses DATABASE_URL only (no variable expansion in .env).
# Use full URL: mysql://USER:PASSWORD@HOST:3306/DATABASE
MYSQL_HOST=localhost
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DATABASE=backend_nodejs_dev
DATABASE_URL=mysql://root:@localhost:3306/backend_nodejs_dev

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Frontend URLs (comma-separated for CORS)
FRONTEND_URL=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# JWT Configuration
JWT_ACCESS_TOKEN_SECRET=your-super-secret-access-token-key-change-in-production
JWT_REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d
