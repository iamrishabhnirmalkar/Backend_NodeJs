# ===========================================
# Docker Environment Variables
# Copy this file to .env and change NODE_ENV for your environment
# ===========================================
# 
# ONE docker-compose.yml works for ALL environments!
# Just change NODE_ENV: development, test, or production
# ===========================================

# Environment - CHANGE THIS for your environment
NODE_ENV=development

# Server Configuration
PORT=8000
SERVER_URL=http://localhost:8000

# Database Configuration
# IMPORTANT: For Docker, ALWAYS use service name 'mysql' (not localhost!)
MYSQL_HOST=mysql
MYSQL_USER=app_user
MYSQL_PASSWORD=app_password
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=backend_nodejs_dev
MYSQL_PORT=3306
DATABASE_URL=mysql://app_user:app_password@mysql:3306/backend_nodejs_dev

# Redis Configuration
# IMPORTANT: For Docker, ALWAYS use service name 'redis' (not localhost!)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Frontend URLs (comma-separated for CORS)
FRONTEND_URL=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# JWT Configuration (CHANGE IN PRODUCTION!)
JWT_ACCESS_TOKEN_SECRET=your-super-secret-access-token-key-change-in-production
JWT_REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d
