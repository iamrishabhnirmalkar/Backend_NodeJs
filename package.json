{
  "name": "backend_nodejs",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "type": "commonjs",
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dist": "npx tsc",
    "start": "cross-env NODE_ENV=production nodemon dist/server.js",
    "dev": "cross-env NODE_ENV=development nodemon src/server.ts",
    "prod": "cross-env NODE_ENV=production nodemon src/server.ts",
    "test": "cross-env NODE_ENV=test nodemon src/server.ts",
    "clean:logs": "rimraf ../../logs",
    "clean:dist": "rimraf dist",
    "clean:all": "rimraf dist ../../logs node_modules",
    "format": "prettier --write .",
    "swagger": "ts-node src/config/swagger.ts",
    "build": "pnpm run clean:dist && pnpm exec tsc",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f app",
    "docker:build": "docker-compose build",
    "docker:restart": "docker-compose restart",
    "prisma:init": "prisma generate",
    "prisma:studio": "prisma studio",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:push": "prisma db push",
    "prisma:reset": "prisma migrate reset",
    "prisma:seed": "prisma generate && prisma db seed",
    "prisma:init:clean": "rimraf generated && prisma generate",
    "prepare": "husky || true"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iamrishabhnirmalkar/Backend_NodeJs.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/iamrishabhnirmalkar/Backend_NodeJs/issues"
  },
  "homepage": "https://github.com/iamrishabhnirmalkar/Backend_NodeJs#readme",
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.0",
    "@types/swagger-ui-express": "^4.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.1.10",
    "prettier": "^3.7.4",
    "prisma": "^6.19.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@prisma/adapter-mariadb": "^7.0.0",
    "@prisma/client": "^6.19.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "dotenv-flow": "^4.1.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "rimraf": "^6.1.2",
    "swagger-autogen": "^2.23.7",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0"
  }
}
